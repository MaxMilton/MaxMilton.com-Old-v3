{
  "files.associations": {
   // better syntax highlighting for PostCSS (only .css files; component styles still use the CSS language unfortunately)
   "*.css": "less"
  },
  "css.validate": false,
  "less.validate": false,
  "javascript.implicitProjectConfig.checkJs": true,
  "eslint.enable": true,
  "eslint.validate": [
    "html",
    "javascript"
  ],
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "json",
    "markdown",
    "plaintext",
    "postcss",
    "text",
    "yaml"
  ]
}
